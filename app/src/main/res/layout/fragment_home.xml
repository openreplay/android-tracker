<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenReplay Test Controls"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Area (Try swiping in any direction)"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <FrameLayout
            android:id="@+id/swipe_area"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/text_swipe_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="👆 Swipe Here 👆\n⬅️ ➡️ ⬆️ ⬇️"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#1976D2" />
        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Test Input Field"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password Field (Masked)"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_network_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigger Network GET Request"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_network_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigger Network POST Request"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_graphql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigger GraphQL Event"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_click_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulate Click Event"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_custom_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Custom Event"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_view_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send View Component Event"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update User Metadata"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigger Error"
            android:backgroundTint="#F44336"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>